# Maintainer: tsonntig

pkgname=fanicontrol-git
pkgver=0.1
pkgrel=1
pkgdesc="a new way controling your fans"
arch=('any')
url="https://github.com/tsonntig/Fanicontrol"
license=('GPL2 only')
groups=()
depends=(python3)
makedepends=('git' 'setuptools')
source=('https://github.com/tsonntig/Fanicontrol.git')
md5sums=('SKIP')


pkgver() {
    cd "$srcdir/${pkgname%}"
    git describe --tags | sed -e 's/^.\{,2\}//'
}


package() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

check() {
	cd "$srcdir/${pkgname%-VCS}"
	make -k check
}